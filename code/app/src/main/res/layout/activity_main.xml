<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.android.anasdjebbari.assignment3.MainActivity">
    <TextView
        android:id="@+id/avg_speed_view"
        android:layout_width="wrap_content"
        android:text="Average Speed"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_view"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:text="Distance"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avg_speed_view"
        android:layout_centerHorizontal="true">
    </TextView>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#e14949"
        android:layout_below="@+id/reset_btn"
        />


    <TextView
        android:id="@+id/speed_view"
        android:layout_width="wrap_content"
        android:text="Speed"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </TextView>

    <Button
        android:id="@+id/btn_start"
        android:text="Start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#3b8c39"
        android:layout_below="@+id/distance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Chronometer
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/cmtime"
        android:layout_below="@+id/btn_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/reset_btn"
        android:text="Reset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#cacaca"
        android:layout_below="@+id/cmtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>